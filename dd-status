# TODO: dd ... | pv -s $(du -sb "$output" | awk '{print $1}') | dd ...
# TODO: dd ... status=progress # Coreutils 8.24+, Ubuntu 16.04+
# TODO: dd ... conv=fsync oflag=direct
# TODO: dialog --gauge
# TODO: --size SIZE  # and do math for count, block

myname="${0##*/}"
time=30
block=32M
count=0

fatal()   { [[ "$1" ]] && echo "$myname: error: $1" >&2 ; exit ${2:-1} ; }
message() { printf "%s\n" "$1"; }
argerr()  { printf "%s: %s\n" "$myname" "${1:-error}" >&2 ; usage 1 ; }
integer() { [[ "$1" != *[!0-9]* ]] || argerr "'$1'${2:+ in $2} is not an integer." ; }
invalid() { argerr "invalid option: $1" ; }
missing() { argerr "missing ${2:+$2 }argument${1:+ from $1}." ; }

is_running() { kill -0    $1 2>/dev/null ; }
dd_status()  { kill -USR1 $1 2>/dev/null ; }

usage() {
	cat <<-USAGE
	Usage: $myname [options] INPUT OUTPUT
	USAGE
	if [[ "$1" ]] ; then
		cat >&2 <<- USAGE
		Try '$myname --help' for more information.
		USAGE
		exit 1
	fi
	cat <<-USAGE

	dd wrapper with progress status

	Options:
	  -h|--help    - show this page.
	  -f|--force   - force copy even for mounted partitions

	  --time TIME  - display progress every TIME seconds. [Default: $time]
	  --block SIZE - copy SIZE blocks at a time. [Default: $block]
	  --count NUM  - number of blocks to copy, 0 for all blocks [Default: $count]

	Copyright (C) 2012 Rodrigo Silva (MestreLion) <linux@rodrigosilva.com>
	License: GPLv3 or later. See <http://www.gnu.org/licenses/gpl.html>
	USAGE
	exit 0
}

# Option handling
files=()
for arg in "$@"; do [[ "$arg" == "-h" || "$arg" == "--help" ]] && usage ; done
while (( $# )); do
	case "$1" in
	-f|--force   ) force=1                        ;;
	--time       ) shift ; time="$1"              ;;
	--time=*     ) time="${1#*=}"                 ;;
	--block      ) shift ; block="$1"             ;;
	--block=*    ) block="${1#*=}"                ;;
	--count      ) shift ; count="$1"             ;;
	--count=*    ) count="${1#*=}"                ;;
	--           ) shift ; break                  ;;
	-*           ) invalid "$1"                   ;;
	*            ) files+=( "$1" )                ;;
	esac
	shift
done
files+=( "$@" )
input=${files[0]}
output=${files[1]}

[[ "$input"  ]] || missing "" "INPUT"
[[ "$output" ]] || missing "" "OUTPUT"
[[ "$block"  ]] || missing "--block" "SIZE"
[[ "$count"  ]] || missing "--count" "NUM"

integer "$time"  "--time"
integer "$count" "--count"

if ! ((force)); then
	for file in "$input" "$output"; do
		if [[ -b "$file" ]] && grep -q "^$file " /proc/mounts; then
			fatal "$file seems to be a mounted partition. Un-mount it first or use --force."
		fi
	done
fi

countarg=()
if ((count)); then
	countarg=(count="$count")
fi

echo "dd if=\"$input\" of=\"$output\" bs=\"$block\"" "${countarg[@]}"

#set -m  # do not supress background output
dd if="$input" of="$output" bs="$block" "${countarg[@]}" status=progress conv=fsync
