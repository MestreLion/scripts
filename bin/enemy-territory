SELECT=`zenity --list --window-icon=/usr/local/games/enemy-territory/ET.xpm --width=300 --height=200 --radiolist --column "ACT" --column "SELECT" \
       FALSE "Start: Enemy Territory (pulseaudio)"\
       TRUE  "Start: Enemy Territory (alsa-audio)"\
	   FALSE "PunkBuster Setup"\
	   FALSE "Tip: How to enable the Bot"`
if echo "$SELECT" | grep $"Start: Enemy Territory (pulseaudio)"; then
	 cd "/usr/local/games/enemy-territory/"
     export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:.
     aoss ./et-pulse "$@"
fi
if echo "$SELECT" | grep $"Start: Enemy Territory (alsa-audio)"; then
	 cd "/usr/local/games/enemy-territory/"
     export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:.
     aoss ./et-alsa "$@"
fi
if echo "$SELECT" | grep $"PunkBuster Setup"; then
	 cd /usr/local/games/enemy-territory/
     ./pbsetup.run
fi
if echo "$SELECT" | grep $"Tip: How to enable the Bot"; then
   zenity --title="How to enable the Bot" --text-info --width=500 --height=400 --filename="/usr/local/games/enemy-territory/tipbot.txt"
fi
exit 0
